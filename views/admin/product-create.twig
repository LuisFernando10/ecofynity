
    {% extends "base-document.twig" %}
    {% block content %}
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-md-2 col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h5 class="card-title">Crear Producto</h5>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="{{general.full_web_url}}producto/"><button type="button" class="btn btn-info">Volver</button></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">

                                {# Nome #}
                                <div class="form-row mt-3">
                                    <div class="offset-md-2 col-md-8">
                                        <div class="form-group bmd-form-group">
                                            <label>Nombre</label>
                                            <input type="text" class="form-control js-producto-nombre">
                                        </div>
                                    </div>
                                </div>

                                {# Adultos-Preço #}
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-6">
                                        <label for="select-adults">Categoría</label>
                                        <select class="form-control js-producto-categoria" id="select-categoria">
                                            <option  disabled class="">Selecionar</option>
                                            {% for categoria in data_categories %}
                                                <option value="{{ categoria.id_categoria }}">{{categoria.nombre}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label style="top: 5px">Precio</label><br style="margin-bottom: 3px">
                                        <input type="number" class="form-control mt-2 js-producto-precio">
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label style="top: 5px">Descuento</label><br style="margin-bottom: 3px">
                                        <input type="number" class="form-control mt-2 js-producto-descuento">
                                    </div>

                                </div>

                                {# Descrição #}
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-12">
                                        <label>Descripción</label>
                                        <textarea type="text" class="form-control js-producto-descripcion"></textarea>
                                    </div>
                                </div>

                                {# Imagem #}
                                <div class="form-group form-file-upload form-file-simple mt-4">
                                    <label>Imagen</label>
                                    <div class="input-group">
                                        <input type="file" class="inputFileHidden js-producto-image">
                                        <input type="text" class="form-control inputFileVisible" placeholder="Selecione una imagen" readonly>
                                        <span class="input-group-btn js-icon-open-input-file">
                                            <button type="button" class="btn btn-fab btn-round btn-primary">
                                                <i class="material-icons">attach_file</i>
                                            </button>
                                        </span>
                                    </div>
                                </div>

                                {# Botao de salvar #}
                                <button type="submit" class="btn btn-primary pull-right btn-save">Crear</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer_scripts %}
        <script type="text/javascript" src="{{ general.full_assets_url }}js/admin/products.js"></script>

    {% endblock %}